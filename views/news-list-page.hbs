<div class="news-list">
  {{>header}}
  {{#if newsListMessage}}
    <div class="alert alert-danger">
      {{{newsListMessage}}}
    </div>
  {{else}}
  <div class="news-list-main" id="news-list-main">
    {{>highlight highlightData=posts path-headline=true}}
    {{>pagination-main}}
  </div>
  {{/if}}
  {{>footer}}
</div>

{{>pagination-script}}