<div class="main__highlight grid-container">
  {{#if categoryHeadline}}
  <div class="news-list-headline">
    {{#with categoryHeadline}}
    {{#with main}}
    <a href="/posts?category={{id}}" class="news-list-headline-text-main">{{name}}</a>
    {{/with}}
    {{#each subs}}
    <a href="/posts?category={{id}}" class="news-list-headline-text-sub">{{name}}</a>
    {{/each}}
    {{/with}}
  </div>
  {{else}}
  {{#if tagHeadline}}
  <div class="news-list-headline">
    <div class="news-list-headline-text-main">Nhãn</div>
    <a href="/posts?tag={{tagHeadline.id}}" class="news-list-headline-text-sub">{{tagHeadline.name}}</a>
  </div>
  {{else}}
  {{#if searchHeadline}}
  <div class="news-list-headline">
    <div class="news-list-headline-text-main">Tìm kiếm</div>
    <a href="/posts?search={{searchHeadline}}" class="news-list-headline-text-sub">{{searchHeadline}}</a>
  </div>
  {{else}}
  <div class="main__highlight-headline">
    <a href="{{originalUrl}}" class="headline-text">{{headline}}</a>
  </div>
  {{/if}}
  {{/if}}
  {{/if}}

  {{#each highlightData}}
  {{>newsItem data=this context=../context }}
  {{/each}}
  {{!-- <a href="/posts?type={{type}}" class="see-more-btn">Xem thêm</a> --}}
</div>