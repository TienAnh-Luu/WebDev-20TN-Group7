<div id="root">
  <div class="dashboard-page">
    {{>header}}
    <main class="main" id="dashboard-main">
      <ul class="dashboard-page-navbar" id="dashboard-navbar">
        {{#each navItems}}
        {{>nav-item data=this}}
        {{/each}}
      </ul>

      <div class="main-content admin-dashboard-page" id="main-content">
        <form action="/admin/createCategory" method="post">
          <div class="text-input-admin">
            <label for="category_name">Tên chuyên mục mới</label>
            <input type="text" name="category_name" id="category_name">
          </div>

          <div class="categoryInput">
            <div class="form-group">
              <label for="categoryDropdown">Chuyên mục</label>
              <div class="dropdown">
                <select id="categoryDropdown" name="new-parent-category" class="form-select" aria-label="Dropdown menu"
                  required>
                  <option value="0" selected>Chuyên mục cha</option>
                  {{#each parent_categories}}
                  <option value="{{dataValues.id}}">{{dataValues.name}}</option>
                  {{/each}}
                </select>
              </div>
            </div>
          </div>

          {{>roundButton type='submit' className='strawberry-backgroundcolor submitButton'
          id='submit-btn' text='Tạo chuyên mục'}}
        </form>
      </div>
    </main>
  </div>
</div>